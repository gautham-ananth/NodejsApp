extends layout

block content
  h1= title
  p Welcome to #{title}
  form(action="/", method="POST")
   input(type="email", placeholder="Enter your email address" name="leadEmail")
   button(type="submit") Submit
  if leads
    h1 Leads
    for lead in leads
      p
        span #{lead.email}
        |
        a(href="/lead/" + lead.id) Details
        |
        button(onClick=`deleteLead('${lead.id}')`)) Delete
      